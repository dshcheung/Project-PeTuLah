<div class="lp-main text-center">
  <div class="lp-main-content col-xs-10 col-xs-push-1 text-center">
      <h1>Welcome to PeTuLah</h1>
      <p>Book your private tour in HK now </p>
  </div>
  <div class="lp-filter text-center col-xs-12">
    <%= form_tag(tours_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Keywords" %>
      <button class="btn btn-lg btn-info" type="submit"> Search
      </button>
      <%= link_to "All tours", tours_path, class: "btn btn-lg btn-info"%>
    <% end %>
  </div>
</div>
<section class="intro">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 lp-div">
        <h2 class="section-heading">About Us</h2>
        <hr class="star-primary">
        </hr>
        <p class="text-light">Sending a booking and we will confirm the status of booking in a day!</p>
      </div>
    </div>
  </div>
</section>
