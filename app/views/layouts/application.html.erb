<!DOCTYPE html>
<html>
  <head>
    <title>ProjectPetulah</title>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Rye', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="jumbotron">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12">
            <%= render "layouts/navbar" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 lp-div">
            <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 lp-div">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
