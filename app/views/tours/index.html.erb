<div class="jumbotron">
  <div class="text-left">
    <%= link_to 'Home', root_path%> -->
    <%= link_to 'All Tours', tours_path, class: "active"%>
  </div>

  <% @tours.each do |tour|%>
    <div class="tours">
      <div class="col-md-12 portfolio-item">
        <h3 class="text-center" class="tour-name"><%= tour.name %></h3>
        <h4 class="text-justify">
          <%= tour.description.first(200) %>...
          <%= link_to "more details", tour_path(tour.id)%>
        </h4>
        <%= image_tag tour.image, class: "img-responsive tour-images" %>
      </div>
    </div>
  <% end %>
</div>
