<div class="well">

  <h4>Login</h4>

  <%= form_tag sessions_path, {class: "form"} do %>
    <div class="field form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="field form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="form-group">
      <%= check_box_tag :remember, "true", false%>Remember Me!
    </div>
    <div class="actions form-group text-center">
      <button class="btn btn-info"> Log in
      </button>
    </div>
    <div class="form-group text-center">
    Don't have an account? <%= link_to "Sign-up", signup_path%>
    today!
    </div>
  <% end %>

</div>