<div class="well text-center">

  <h4>Sign Up</h4>
  <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
    <% if @user.errors.any? %>
    <div class="error_messages alert alert-danger">
      <ul>
        <% for message in @user.errors.full_messages %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :first_name, class: "col-xs-3 control-label" %>
      <%= f.text_field :first_name, class: "col-xs-8" %>
    </div>
    <div class="field form-group">
      <%= f.label :last_name, class: "col-xs-3 control-label" %>
      <%= f.text_field :last_name, class: "col-xs-8" %>
    </div>
    <div class="field form-group">
      <%= f.label :email, class: "col-xs-3 control-label" %>
      <%= f.text_field :email, class: "col-xs-8" %>
    </div>
    <div class="field form-group">
      <%= f.label :password, class: "col-xs-3 control-label" %>
      <%= f.password_field :password, class: "col-xs-8" %>
    </div>
    <div class="field form-group">
      <%= f.label :confirm_password, class: "col-xs-3 control-label" %>
      <%= f.password_field :password_confirmation, class: "col-xs-8" %>
    </div>
    <div class="actions form-group text-center">
      <button class="btn btn-info"> Sign-up
      </button>
    </div>
    <div class="form-group text-center">
    Already have an account? <%= link_to "Log in", login_path%>
    today!
    </div>
  <% end %>

</div>